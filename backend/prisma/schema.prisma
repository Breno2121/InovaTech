generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id
  name      String
  email     String   @unique
  password  String
  createdAt DateTime
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Client {
  id      String    @id
  name    String
  email   String    @unique
  cpf     String    @unique
  phone   String
  Chamado Chamado[]

  @@map("client")
}

model Chamado {
  id         String   @id
  titulo     String
  descricao  String
  status     String
  clientId   String
  manutencao String
  client     Client   @relation(fields: [clientId], references: [id])
  createdAt  DateTime

  @@map("chamado")
}
