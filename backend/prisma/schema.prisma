generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id
  name      String
  email     String    @unique
  password  String
  birthDate DateTime?
  createdAt DateTime
  updatedAt DateTime  @updatedAt

  @@map("users")
}

model Client {
  id         String       @id
  name       String
  email      String       @unique
  cpf        String       @unique
  phone      String
  Chamado    Chamado[]
  Comentario Comentario[]

  @@map("client")
}

model Chamado {
  id         String       @id
  titulo     String
  descricao  String
  status     String
  email      String
  manutencao String
  client     Client       @relation(fields: [email], references: [email], onDelete: Cascade)
  createdAt  DateTime
  Comentario Comentario[]

  @@map("chamado")
}

model Comentario {
  id          String   @id
  chamadoId   String
  content     String
  emailClient String
  createdAt   DateTime
  updatedAt   DateTime @updatedAt
  chamado     Chamado  @relation(fields: [chamadoId], references: [id])
  client      Client   @relation(fields: [emailClient], references: [email], onDelete: Cascade )

  @@map("comentario")
}
